<%- include ("partials/header")%>
    <main>
        <div style="height:95vh; width:100%; background-color:#f2f2f2;">
            <%- include ("partials/navigation")%>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-4">
                        <div class="card mt-5 mb-5">
                            <div class="card-body">
                                <h4 class="card-title">Editar la tarea</h4>
                                <form action="/edit" method="post">
                                    <input type="hidden" name="id" value="<%=result.id%>">  
                                    <div class="form-group mt-4">
                                        <hr>
                                        <input 
                                        type="text"
                                        class="form-control"
                                        value="<%= result.tarea%>"
                                        name="tarea">
                                    </div>
                                    <div class="form-group mt-3">
                                        <%- include ("partials/selector")%>
                                    </div>
                                    <div class="form-group d-grid gap-2 mx-auto mt-4 mb-5">
                                        <button class="btn btn-primary btn-block">
                                          + Editar Tarea
                                        </button>
                                      </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>        
    </main>
<%- include ("partials/footer")%>
<script>
    let setDay = document.getElementById("day")
    let setMonth = document.getElementById("month")
    let setYear = document.getElementById("year")
    let values = "<%= result.fecha%>".split("-") 
    setDay.value = values[0]
    setMonth.value = values[1]
    setYear.value = values[2]
</script>